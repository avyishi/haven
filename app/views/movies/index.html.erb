<% if current_user %>
<h1>My Movies</h1>

<%= link_to 'Add Movie', new_movie_path %>
<table class="table-responsive" width = "100%">
  <thead>
    <tr>
      <th></th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>



