<% if current_user %>
<div><%= link_to 'Add Movie', new_movie_path %></div><br>
    <% @movies.each do |movie| %>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
          <%= link_to (image_tag movie.image.url(:medium), class: 'image') , movie %>
          <%= link_to movie.title, movie %> |
          <%= link_to 'Remove', movie, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
      </div>
    <% end %>
<% end %>



