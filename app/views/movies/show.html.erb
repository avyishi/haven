<div class="row">
  <div class="col-md-4">
    <%= image_tag @movie.image.url(:medium) %>
    <div class="table-responsive">
      <%= link_to "Review it!", new_movie_review_path(@movie), class: "btn btn-info" %>
    </div>
  </div>

  <div class="col-md-7 col-md-offset-1">
    <h1 class="review_title"><%= @movie.title %></h1><br>
  
    <% if @reviews.blank? %>
      <h3 align = "center">No reviews yet, be the first!</h3>
      <%= link_to "Review it", new_movie_review_path(@movie), class: "btn btn-info" %>
    <% else %>
      <% @reviews.each do |review| %>
        <div class="reviews">
        <p><%= review.comment %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<br>

<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>
