<h2><%= @movie.title %></h2>
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @movie.image.url(:medium) %>
        <div class="table-responsive">
          <table class="table">
            <tbody>
            </tbody>
          </table>
          <%= link_to "Review it!", new_movie_review_path(@movie), class: "btn btn-info" %>
          </div>
        </div>

        <div class="col-md-7 col-md-offset-1">
        <h1 class="review_title"><%= @movie.title %></h1>
      
        <% if @reviews.blank? %>
          <h3 align = "center">No reviews yet, would you like to add the first!</h3>
          <%= link_to "Review it", new_movie_review_path(@movie), class: "btn btn-info" %>
        <% else %>
          <% @reviews.each do |review| %>
            <div class="reviews">
              <p><%= review.comment %></p>
            </div>
          <% end %>
        <% end %>
     </div>
    </div>
  </div>
</div>
<br>

