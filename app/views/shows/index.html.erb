<% if current_user %>
<h1>My Shows</h1>

<%= link_to 'Add TV Show', new_show_path %>

<table class="table-responsive" width = "100%">
  <thead>
    <tr>
      <th></th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%= show.title %></td>
        <td><%= link_to 'Edit', edit_show_path(show) %></td>
        <td><%= link_to 'Destroy', show, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>


