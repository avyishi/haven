<h2><%= @show.title %></h2>
<div class="row">
  <div class="col-md-4">
    <%= image_tag @show.image.url(:medium) %>
    <div class="table-responsive">
      <%= link_to "Review it!", new_show_reviewtv_path(@show), class: "btn btn-info" %>
    </div>
  </div>
    
  <div class="col-md-7 col-md-offset-1">
    <h1 class="reviewtv_title"><%= @show.title %></h1><br>
    
    <% if @reviewtvs.blank? %>
      <h3 align = "center">No reviews yet, be the first!</h3>
      <%= link_to "Review it!", new_show_reviewtv_path(@show), class: "btn btn-info" %>
      <% else %>
        <% @reviewtvs.each do |reviewtv| %>
          <div class="reviewtvs">
            <p><%= reviewtv.comment %></p>
          </div>
        <% end %>
      <% end %>
    </div>
</div>
<br>

<%= link_to "Edit", edit_show_path(@show) %> |
<%= link_to 'Back', shows_path %>


 
