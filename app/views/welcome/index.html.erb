<div style="background:transparent !important" class="jumbotron">
<div class="container">

  <h1>
     <em><span style="color: #33CCFF;">Media Haven</span></em>
  </h1>
  <h4 align="center">Add TV Shows, Movies & Review Them!</h4>
  <p align="center">
      <%= link_to "Sign In", new_user_session_path, class: 'btn btn-info :hover' %>
  </p>
</div>
</div>

<div>
<table class="table-responsive" style= "float:left" width= "50%">
  <thead>
    <tr>
     <th><span style="color: #ffffff;"></th></span>
    </tr>
  </thead>  
    <tbody>
    <% @movies.each do |movie| %>
        <tr>
          <td rowspan="1" >
           <div class="col-sm-2 col-sm-3">
          <div class="thumbnail" align = "center" width="10%">
          <%= link_to (image_tag movie.image.url(:medium), class: 'image') , movie %>
          <%= link_to movie.title, movie %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
  </div>

  <div>
  <table class= "table-responsive" width= "50%">
  <thead>
    <tr>
   <th><span style="color: #ffffff;" > </th></span>
   </tr>
    </thead> 
      <tbody >
      <% @shows.each do |show| %>
        <tr>
         <td rowspan="1">
           <div class="col-sm-2 col-sm-3">
           <div class="thumbnail" align = "center" width="10%">
            <%= link_to (image_tag show.image.url(:medium), class: 'image') , show %>
            <%= link_to show.title, show %>
          </td>
        </tr>
       <% end %>
    </tbody>
</table>
</div>
